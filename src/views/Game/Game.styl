#signature, #signatureChat
    margin-left auto
    margin-right auto
    canvas
        width 90%
        display block
        height 90vw
        background white

@keyframes slideright {
    0% {
        transform: translateX(-100%)
    }
    100% { 
        transform: translateX(0)
    }
}
@keyframes slideleft {
    0% {
        transform: translateX(100%)
    }
    100% { 
        transform: translateX(0)
    }
}

.palette-container
    display flex
    button.palette-item
        flex-grow 1
        height 40px
        margin 2px
        border-style solid
        border-color rgba(255, 255, 255, 0.5)
        transition border-radius 0.6s ease
        &.active
            border-radius 50%
        &:first-of-type
            margin-left 0
        &:last-of-type
            margin-right 0
.header-tools
    button.undo
        float right
        height 40px
        
    button.brush-item
        height 40px
        width 40px
        position relative
        background white
        border-style solid
        transition background 0.6s ease
        &.active
            background #b149c4
        span.brush-dot
            content ''
            display block
            position absolute
            background #000
            height 20px
            width 20px
            margin-left auto
            margin-right auto
            border-radius 50%
            top 50%
            left 50%
            transform translate(-50%, -50%)
.limbo
    #signature2
        margin-left auto
        margin-right auto
    canvas
        border-radius 7px
        background white
.chatList
    div:first-of-type
        &.chat-left
            animation-duration: 2s;
            animation-name: slideright;
            animation-direction normal
        &.chat-right
            animation-duration: 2s;
            animation-name: slideleft;
            animation-direction normal
    img
        background white
        width 100%
        border-radius 7px
        display block
    .bubble
        width 60%
        padding 0
    
.task .bubble
    min-width 75%
