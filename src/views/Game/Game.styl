#signature, #signatureChat
    margin-left auto
    margin-right auto
    canvas
        width 90%
        display block
        height 90vw
        background white

.palette-container
    display flex
    button.palette-item
        flex-grow 1
        height 40px
        margin 2px
        &:first-of-type
            margin-left 0
        &:last-of-type
            margin-right 0
.header-tools
    button.brush-item
        height 40px
        width 40px
        position relative
        span.brush-dot
            content ''
            display block
            position absolute
            background #000
            height 20px
            width 20px
            margin-left auto
            margin-right auto
            border-radius 50%
            top 50%
            left 50%
            transform translate(-50%, -50%)
.limbo
    canvas
        border-radius 50%
        background white
.chatList
    p
        text-align left
    img
        background white
        width 50%
        border-radius 50%
        display block
        margin-left auto
        margin-right auto